<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>IRC URL2 log</title>
    <style type="text/css">
        body {
            background-color: white;
            font-family: serif;
        }

        table {
            display: block;
            overflow-x: auto;
            white-space: nowrap;
            border: 0px;
            width: 90%;
        }

        tr:nth-child(even) {
            background-color: #f0f0f0;
        }

        th,
        td {
            text-align: left;
            vertical-align: top;
            padding-top: 3px;
            padding-bottom: 3px;
            padding-left: 8px;
            padding-right: 8px;
            font-family: monospace;
        }

        td:nth-child(5) {
            overflow: hidden;
        }
    </style>
</head>

<body>
    <h1>IRC URL2 log</h1>
    <a href="search/">to search page</a>
    <h3>Last 7 days -- all timestamps are UTC</h3>
    <p>Page updated {{last_change}}</p>
    <hr>
    <table>
        <tr>
            <th>ID</th>
            <th>Seen First</th>
            <th>Seen Last</th>
            <th>Seen#</th>
            <th>Channel</th>
            <th>Nick</th>
            <th>Title, URL</th>
        </tr>
        {% for id_i in uniq_id -%}
        {% if uniq_seen_cnt[loop.index0] != "1" -%}
        {% set BB = "<b>" -%}
            {% set BE = "</b>" -%}
        {% else -%}
        {% set BB = "" -%}
        {% set BE = "" -%}
        {% endif -%}
        <tr>
            <td>{{id_i}}<br><input type="submit" onclick="remove_url({{id_i}})" value="remove"></td>
            <td>{{BB}}{{uniq_seen_first[loop.index0]}}{{BE}}<br>
                <div id="removed_{{id_i}}"></div>
            </td>
            <td>{{uniq_seen_last[loop.index0]}}</td>
            <td>{{BB}}{{uniq_seen_cnt[loop.index0]}}{{BE}}</td>
            <td>{{uniq_channel[loop.index0]}}</td>
            <td>{{uniq_nick[loop.index0]}}</td>
            <td>
                <div id="title_{{id_i}}">
                    {{uniq_title[loop.index0]}}</div><br>
                <input type="submit" onclick="remove_meta({{id_i}})" value="update">
                <a href="{{uniq_url[loop.index0]}}">{{uniq_url[loop.index0]}}</a>
            </td>
        </tr>
        {% endfor -%}
    </table>
</body>
<script>
    function remove_url(id) {
        var o = document.getElementById("removed_" + id);
        o.innerHTML = "wait...";
        var url = "/url2/search/remove_url?id=" + id;
        const Http = new XMLHttpRequest();
        Http.open("GET", url, false);
        Http.onreadystatechange = (e) => {
            o.innerHTML = Http.responseText;
        }
        Http.send();
    }
    function remove_meta(id) {
        var o = document.getElementById("title_" + id);
        o.innerHTML = "updating...";
        var url = "/url2/search/remove_meta?id=" + id;
        const Http = new XMLHttpRequest();
        Http.open("GET", url, false);
        Http.onreadystatechange = (e) => {
            o.innerHTML = Http.responseText;
        }
        Http.send();
    }
</script>

</html>